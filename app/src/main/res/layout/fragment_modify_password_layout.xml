<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/modify_password_page_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:text="修改密码"
    android:textSize="25sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
  </TextView>

  <EditText
    android:id="@+id/modify_password_page_old_pwd_view"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:hint="请输入旧密码"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/modify_password_page_title">
  </EditText>

  <EditText
    android:id="@+id/modify_password_page_first_new_pwd_view"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:hint="请输入新密码"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/modify_password_page_old_pwd_view">
  </EditText>

  <EditText
    android:id="@+id/modify_password_page_second_new_pwd_view"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:hint="请再次输入新密码"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/modify_password_page_first_new_pwd_view">
  </EditText>

  <Button
    android:id="@+id/modify_pwd_page_save_button"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="120dp"
    android:text="保存"
    android:textSize="25sp"
    app:layout_constraintTop_toBottomOf="@+id/modify_password_page_second_new_pwd_view">
  </Button>
</androidx.constraintlayout.widget.ConstraintLayout>
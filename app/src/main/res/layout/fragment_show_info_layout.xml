<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/fragment_show_page_info_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="50dp"
    android:text="个人详情"
    android:textSize="25sp">
  </TextView>

  <LinearLayout
    app:layout_constraintTop_toBottomOf="@+id/fragment_show_page_info_title"
    android:id="@+id/fragment_show_info_page_nickname_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="50dp"
    android:orientation="horizontal">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center|left"
      android:gravity="center"
      android:text="昵称:"
      android:textSize="20sp">
    </TextView>
    <TextView
      android:id="@+id/fragment_show_info_page_nickname_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_marginLeft="30dp">
    </TextView>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/fragment_show_info_page_sex_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:orientation="horizontal"
    android:layout_marginLeft="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/fragment_show_info_page_nickname_container">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center|left"
      android:gravity="center"
      android:text="性别:"
      android:textSize="20sp">
    </TextView>
    <TextView
      android:id="@+id/fragment_show_info_page_sex_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_gravity="center"
      android:gravity="center">
    </TextView>
  </LinearLayout>

  <Button
    android:id="@+id/fragment_show_info_page_update_info_button"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="120dp"
    android:text="编辑资料"
    android:textSize="25sp"
    app:layout_constraintTop_toBottomOf="@+id/fragment_show_info_page_sex_container">
  </Button>

</androidx.constraintlayout.widget.ConstraintLayout>